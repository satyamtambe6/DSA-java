public class Main {

    static int factorial(int n) {

        // Base case
        if (n == 0) {
            return 1;
        }

        // Recursive case
        return n * factorial(n - 1);
    }

    public static void main(String[] args) {
        int n = 5;
        System.out.println("Factorial = " + factorial(n));
    }
}
