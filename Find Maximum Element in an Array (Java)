public class MaxElementInArray {
    public static void main(String[] args) {

        int[] arr = {12, 5, 8, 20, 3};

        int max = arr[0];   // assume first element is maximum

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] > max) {
                max = arr[i];
            }
        }

        System.out.println("Maximum element in the array is: " + max);
    }
}
